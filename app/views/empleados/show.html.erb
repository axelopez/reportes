<div class="panel panel-primary">
<div class="panel-heading"><h2>Modificar Empleado</h2></div>
<div class="panel-body">
<p id="notice"><%= notice %></p>

<p>
  <strong>Nombre:</strong>
  <%= @empleado.nombre %>
</p>

<p>
  <strong>Fecha nacimiento:</strong>
  <%= @empleado.fecha_nacimiento %>
</p>

<p>
  <strong>Area:</strong>
  <%= @empleado.area %>
</p>

<p>
  <strong>Puesto:</strong>
  <%= @empleado.puesto %>
</p>

<p>
  <strong>Sexo:</strong>
  <%= @empleado.sexo %>
</p>

<p>
  <strong>Salario:</strong>
  <%= @empleado.salario %>
</p>

<%= link_to 'Modificar', edit_empleado_path(@empleado), class: "btn btn-default" %> 
<%= link_to 'Regresar', empleados_path, class:"btn btn-default" %>
</div>.
</div>