<div class="box grid_8">
    <%= simple_form_for(@reporte_campo) do |f| %>
    <%= f.input :reporte_id, as: :hidden %>
    <div class="box-head"><span class="box-icon-24 fugue-24 ui-toolbar"></span><h2>Campos del Reporte <%= @reporte_campo.reporte.titulo %></h2></div>
    <div class="box-content">
        <div class="form-row">
            <p class="form-label">Campo</p>
            <div class="form-item">
                <%= f.input :campo,label:false %>
            </div>
        </div>
        <div class="form-row">
            <p class="form-label">Etiqueta</p>
            <div class="form-item">
                <%= f.input :descripcion,label:false %>
            </div>
        </div>
        <div class="form-row">
            <p class="form-label">Tipo de Dato</p>
            <div class="form-item">
                <%= f.input :tipo, collection:["String", "Date", "Datetime", "Decimal"] , label:false  %>
            </div>
        </div>
        <div class="form-row">
            <p class="form-label">Sumatoria</p>
            <div class="form-item">
                <%= f.input :sumatoria, collection: ["Suma"], label:false %>
            </div>
        </div>
        <div class="form-row">
            <p class="form-label">Orden</p>
            <div class="form-item">
                <%= f.input :orden, label:false %>
            </div>
        </div>
        <div class="form-row">
            <p class="form-label">Visible</p>
            <div class="form-item">
                <%= f.input :visible, label:false %>
            </div>
        </div>
        <div class="form-row">
            <div class="form-item" style="text-align:right">
                <button type="submit" class="button big green">Guardar</button>
                <%= link_to 'Regresar', reporte_path(@reporte_campo.reporte_id), class: "button big blue" %>
            </div>
        </div>
    </div>
    <% end %>
</div>
<div class="box grid_4">
    <div class="box-head"><span class="box-icon-24 fugue-24 database-export"></span><h2>SQL</h2></div>
    <div class="box-content no-pad">
     
        <%= @reporte_campo.reporte.sql %>
     
    </div>
</div>
<script>
$('#reporte_campo_visible').iphoneStyle({
  checkedLabel: 'SI',
  uncheckedLabel: 'NO'
});
</script>